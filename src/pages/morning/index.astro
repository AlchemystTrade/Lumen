---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const morningVideos = await getCollection('videos', ({ id }) => {
  return id.startsWith('morning/');
});
---

<Layout title="Morning">
  <header class="header">
    <h1>ðŸŒ… Morning</h1>
    <p>Start your day with calm and inspiring content</p>
    <nav class="nav">
      <a href="/">Home</a>
      <a href="/day/">Day</a>
      <a href="/evening/">Evening</a>
    </nav>
  </header>

  <main>
    <div class="video-grid">
      {morningVideos.map((video) => (
        <a href={`/videos/${video.slug}/`} class="video-card">
          <h3>{video.data.title}</h3>
          <p>{video.data.description}</p>
        </a>
      ))}
      {morningVideos.length === 0 && (
        <p style="grid-column: 1 / -1; text-align: center; color: var(--color-text-muted);">
          No videos available yet. Check back soon!
        </p>
      )}
    </div>
  </main>
</Layout>
