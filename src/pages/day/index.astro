---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const dayVideos = await getCollection('videos', ({ id }) => {
  return id.startsWith('day/');
});
---

<Layout title="Day">
  <header class="header">
    <h1>☀️ Day</h1>
    <p>Discover content for daytime viewing</p>
    <nav class="nav">
      <a href="/">Home</a>
      <a href="/morning/">Morning</a>
      <a href="/evening/">Evening</a>
    </nav>
  </header>

  <main>
    <div class="video-grid">
      {dayVideos.map((video) => (
        <a href={`/videos/${video.slug}/`} class="video-card">
          <h3>{video.data.title}</h3>
          <p>{video.data.description}</p>
        </a>
      ))}
      {dayVideos.length === 0 && (
        <p style="grid-column: 1 / -1; text-align: center; color: var(--color-text-muted);">
          No videos available yet. Check back soon!
        </p>
      )}
    </div>
  </main>
</Layout>
