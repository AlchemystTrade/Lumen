---
import BaseLayout from '../layouts/BaseLayout.astro';
import library from '../content/library.json';

const morningContent = library.filter(item => item.period === 'morning');
---

<BaseLayout title="Morning — Lumen">
	<h1>Morning</h1>
	<p>
		The morning collection features works that are gentle, awakening, and reflective. 
		Ideally viewed in the quiet hours of the early day.
	</p>

	<div class="library-catalog">
		{morningContent.map(item => (
			<article class="catalog-card">
				<h2 class="card-title">{item.title}</h2>
				<p class="card-meta">
					{item.source} · {item.license}
				</p>
				<p class="card-note">{item.note}</p>
				<a href={item.url} target="_blank" rel="noopener noreferrer" class="source-link">[visit external source]</a>
			</article>
		))}
	</div>

	<style>
		.library-catalog {
			margin-top: 3rem;
		}
		.catalog-card {
			margin-bottom: 3rem;
			padding-bottom: 2rem;
			border-bottom: 1px solid var(--border-color);
		}
		.catalog-card:last-child {
			border-bottom: none;
		}
		.card-title {
			font-family: "Georgia", serif;
			font-size: 1.5rem;
			margin: 0 0 0.5rem 0;
			font-weight: 400;
		}
		.card-meta {
			font-size: 0.85rem;
			color: var(--muted-text);
			margin: 0 0 1rem 0;
		}
		.card-note {
			font-size: 1rem;
			margin: 0 0 1.5rem 0;
		}
		.source-link {
			font-size: 0.85rem;
			text-decoration: none;
			color: var(--text-color);
			border: 1px solid var(--border-color);
			padding: 0.4rem 0.8rem;
			display: inline-block;
		}
		.source-link:hover {
			border-color: var(--text-color);
			background-color: #f5f5f5;
		}
	</style>
</BaseLayout>
